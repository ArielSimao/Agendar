            </GroupBox>
            <Button Name="BtnFiltrar" Content="Filtrar" HorizontalAlignment="Left" Margin="125,604,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>
    </StackPanel>

</UserControl>
