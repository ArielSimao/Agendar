                    <CheckBox Name="CbSala1" Content="Sala 1" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.534,2.111" Foreground="Black"/>
                    <CheckBox Name="CbSala2" Content="Sala 2" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.534,2.111" Foreground="Black"/>
                    <CheckBox Name="CbSala3" Content="Sala 3" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.534,2.111" Foreground="Black"/>
